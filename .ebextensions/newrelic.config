files:
  "/etc/newrelic-infra.yml" :
    mode: "000644"
    owner: root
    group: root
    content: |
      license_key: 5dc81b6203a2bbbd5d4968ba9f994ba206cdNRAL
      app_name = CarryGo-NodeJS
      log_file_path = /var/log/eb-docker/containers/eb-current-app/

commands:
# Create the agentâ€™s yum repository
  "01-agent-repository":
    command: sudo curl -o /etc/yum.repos.d/newrelic-infra.repo https://download.newrelic.com/infrastructure_agent/linux/yum/amazonlinux/2023/x86_64/newrelic-infra.repo
# Update your yum cache
  "02-update-yum-cache":
    command: sudo yum -q makecache -y --disablerepo='*' --enablerepo='newrelic-infra'
##
# Run the installation script
  "03-run-installation-script":
    command: sudo yum install newrelic-infra -y